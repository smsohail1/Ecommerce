<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/cardViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="2dp"

            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="2dp">


        <LinearLayout
                android:id="@+id/linearParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.3"
                    android:padding="5dp">


                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="100dp">
                    <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:gravity="center_horizontal"
                            android:src="@drawable/ardino"
                    />

                    <ImageView
                            android:id="@+id/imgProductCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:gravity="center_horizontal"
                            android:src="@drawable/ardino"
                    />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"

            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"

                              android:orientation="vertical">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:weightSum="1.0"
                                  android:layout_marginRight="5dp"
                                  android:layout_marginLeft="5dp"
                                  android:orientation="horizontal">


                        <LinearLayout android:layout_width="0dp"
                                      android:layout_weight="0.7"
                                      android:layout_height="wrap_content"
                                      android:gravity="center_vertical"
                                      android:orientation="vertical">

                            <TextView
                                    android:id="@+id/productNameLabelTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/row_product_name_textview"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="@dimen/txt_report_list_item_size"/>


                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginTop="3dp"
                                          android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/priceLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/price_textview"
                                        android:layout_marginLeft="5dp"
                                        android:textStyle="bold"
                                        android:text="Rs"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                                <TextView
                                        android:id="@+id/priceTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/price_textview"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                            </LinearLayout>

                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginTop="3dp"
                                          android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/discountPriceLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/discount_price_textview"
                                        android:layout_marginLeft="5dp"
                                        android:textStyle="bold"
                                        android:text="Rs"
                                        android:background="@drawable/strike_through"
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                                <TextView
                                        android:id="@+id/discountPriceTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/discount_price_textview"
                                        android:text="120"
                                        android:textStyle="bold"
                                        android:background="@drawable/strike_through"
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/txt_report_list_item_size"/>
                            </LinearLayout>


                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginTop="3dp"
                                          android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/orderDateLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/price_textview"
                                        android:layout_marginLeft="5dp"
                                        android:text="Stock: "
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/txt_report_list_item_size"/>


                                <!--<ImageView android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:src="@drawable/icon"/>-->
                                <TextView
                                        android:id="@+id/availabilitStockTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/in_stock_textview_color"
                                        android:layout_marginLeft="5dp"
                                        android:text="In Stock"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                                      android:layout_weight="0.15"
                                      android:layout_height="wrap_content"
                                      android:gravity="right"
                                      android:clickable="true"
                                      android:orientation="vertical">

                            <ImageView
                                    android:id="@+id/btnAddToCart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/btn_cancel_order_height"
                                    android:theme="@style/PrimaryButton"
                                    android:text="@string/btn_add_to_cart"
                                    android:textAllCaps="false"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:src="@drawable/icon_favourites_add_to_cart"
                                    android:textSize="@dimen/btn_cancel_order_txt_size"
                                    android:clickable="true"
                            />

                        </LinearLayout>


                        <LinearLayout android:layout_width="0dp"
                                      android:layout_weight="0.15"
                                      android:layout_height="wrap_content"
                                      android:gravity="right"
                                      android:layout_marginLeft="7dp"
                                      android:layout_marginRight="5dp"
                                      android:layout_marginTop="8dp"
                                      android:clickable="true"

                                      android:orientation="vertical">

                            <ImageView
                                    android:id="@+id/imgRemove"
                                    android:layout_width="@dimen/delete_width"
                                    android:layout_height="@dimen/delete_height"
                                    android:theme="@style/PrimaryButton"
                                    android:textColor="@color/white"
                                    android:padding="7dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/selector_delete"
                                    android:clickable="true"
                            />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center_vertical"
                                  android:weightSum="1.0"
                                  android:layout_gravity="right"
                                  android:orientation="horizontal"
                                  android:clickable="true"
                                  android:layout_marginRight="5dp"
                                  android:layout_marginBottom="3dp"
                                  android:layout_marginTop="3dp"
                    >


                        <!--<LinearLayout android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal">-->

                        <!--<Button-->
                        <!--android:id="@+id/btnAddToCart"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="@dimen/btn_cancel_order_height"-->
                        <!--android:theme="@style/PrimaryButton"-->
                        <!--android:text="@string/btn_add_to_cart"-->
                        <!--android:textAllCaps="false"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="@dimen/btn_cancel_order_txt_size"-->
                        <!--/>-->

                        <!--</LinearLayout>-->

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>