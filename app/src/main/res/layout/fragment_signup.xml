<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/parentRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light_missing_fields_bg"
                android:clickable="true"
>


    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:visibility="gone"
    >


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/signup_title"
                  android:fontFamily="@font/titilliu_web_regular"
                  android:layout_centerVertical="true"
                  android:layout_centerInParent="true"
                  android:textColor="@color/white_label"
                  android:textSize="30sp"/>


        <!--<ImageView-->
        <!--android:id="@+id/cancelIcon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="5dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/icon_cancel_signup"-->

        <!--/>-->

    </RelativeLayout>

    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/header"
            android:fillViewport="true">


        <LinearLayout
                android:id="@+id/linearLayoutParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/header"
                android:gravity="center_vertical"
                android:fillViewport="true"
        >


            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="@drawable/company_logo"-->

            <!--/>-->
            <android.support.design.widget.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_stroke_sign_in_edt"
                    android:paddingRight="10dp"
                    android:textColorHint="#ffffff"

            >
                <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/icon_user_account"
                        android:drawablePadding="7dp"
                        android:textColor="#ffffff"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"
                        android:maxLines="1"
                        android:fontFamily="@font/titilliu_web_regular"
                        android:hint="@string/employee_code_hint_signup_edt"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>
            <!--<EditText-->
            <!--android:id="@+id/edtPassword"-->
            <!--android:layout_width="260dp"-->
            <!--android:layout_height="@dimen/edit_height"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/bg_stroke_signup_edt"-->
            <!--android:drawableLeft="@drawable/icon_password"-->
            <!--android:drawablePadding="7dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:fontFamily="@font/titilliu_web_regular"-->
            <!--android:hint="@string/password_hint_signup_edt"-->
            <!--android:inputType="textPassword"-->
            <!--android:imeOptions="actionDone"-->
            <!--android:maxLength="15"-->
            <!--android:textColorHint="@color/edt_signup_hint"-->
            <!--android:textCursorDrawable="@drawable/cursor_color"-->
            <!--android:textSize="14sp"-->
            <!--/>-->

            <android.support.design.widget.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_stroke_sign_in_edt"
                    android:paddingRight="10dp"
                    android:textColorHint="#ffffff"
            >
                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                        android:id="@+id/edtPasswordShowHide"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/icon_password"
                        android:drawablePadding="7dp"
                        android:fontFamily="@font/titilliu_web_regular"
                        android:hint="@string/password_hint_signup_edt"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:textColor="#ffffff"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp"

                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_stroke_sign_in_edt"
                    android:paddingRight="10dp"
                    android:textColorHint="#ffffff"

            >
                <EditText
                        android:id="@+id/edtUserPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/icon_mobile_account"
                        android:drawablePadding="7dp"
                        android:fontFamily="@font/titilliu_web_regular"
                        android:hint="@string/phone_no_hint_signup_edt"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="#ffffff"
                        android:maxLines="1"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/cursor_color"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_stroke_sign_in_edt"
                    android:paddingRight="10dp"
                    android:textColorHint="#ffffff"

            >
                <EditText
                        android:id="@+id/edtEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/icon_email_account"
                        android:drawablePadding="7dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/titilliu_web_regular"
                        android:hint="@string/email_address_hint_signup_edt"
                        android:inputType="textEmailAddress"
                        android:maxLength="40"
                        android:textColor="#ffffff"
                        android:maxLines="1"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="@dimen/btn_login_width"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:theme="@style/PrimaryButton"
                    android:text="@string/signup_screeen_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/btn_login_size"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
