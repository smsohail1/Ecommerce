                <android.support.design.widget.TextInputLayout
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"
                >
                    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/edtPasswordShowHide"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/icon_password"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/password_hint_signup_edt"
                            android:inputType="textPassword"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:paddingRight="5dp"

                            android:maxLength="15"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"

                    />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"

                >
                    <EditText
                            android:id="@+id/edtUserPhoneNo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/icon_mobile_account"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/phone_no_hint_signup_edt"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:paddingRight="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"

                            android:textCursorDrawable="@drawable/cursor_color"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"

                >
                    <EditText
                            android:id="@+id/edtEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/icon_email_account"
                            android:drawablePadding="7dp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/email_address_hint_signup_edt"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:paddingRight="5dp"

                            android:layout_marginBottom="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"/>

                </android.support.design.widget.TextInputLayout>
                <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="@dimen/button_login_width"
                        android:layout_height="@dimen/button_login_height"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:theme="@style/PrimaryButton"
                        android:text="@string/signup_screeen_btn"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/btn_login_size"/>


