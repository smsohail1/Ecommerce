<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/irongrip_repeating"
>


    <LinearLayout
            android:id="@+id/searchParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="#008577"

    >
        <EditText
                android:id="@+id/edtSearchProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@drawable/bg_stroke_sign_in_edt"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="7dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/titilliu_web_regular"
                android:hint="@string/edt_shop_details"
                android:inputType="text"
                android:maxLength="50"
                android:textColor="@color/red_edt_hint"
                android:textColorHint="@color/red_edt_hint"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_below="@+id/searchParent">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewProductDetails"
                android:layout_below="@+id/categoryLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </LinearLayout>

</RelativeLayout>