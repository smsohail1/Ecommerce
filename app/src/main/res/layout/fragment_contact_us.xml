<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>
    <RelativeLayout
            android:id="@+id/relativeLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/irongrip_repeating"
            android:clickable="true"
            android:layout_gravity="center_vertical"


    >


        <android.support.v7.widget.CardView
                android:id="@+id/cardViewParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_centerInParent="true"
        >


            <!--<LinearLayout android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="5dp">-->

            <!--<TextView android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Create your account."-->
            <!--android:fontFamily="@font/titilliu_web_regular"-->
            <!--android:textColor="@color/light_black_text"-->
            <!--android:textStyle="bold"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:textSize="@dimen/create_your_account_text_size"/>-->

            <!--</LinearLayout>-->
            <!---->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Contact Us"
                              android:fontFamily="@font/titilliu_web_regular"
                              android:textColor="@color/light_black_text"
                              android:textStyle="bold"
                              android:gravity="center_vertical"
                              android:textAllCaps="false"
                              android:textSize="@dimen/login_textview_size"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                    >
                        <ImageView
                                android:id="@+id/imgCallMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_track_phonecall"
                                android:padding="6dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/phone_call_selector"

                        />
                    </LinearLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_username"
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/colorPrimary"


                >
                    <EditText
                            android:id="@+id/edtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:drawableLeft="@drawable/icon_user_account"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="Username"
                            android:textColor="@color/availibility_textview"
                            android:inputType="textEmailAddress"
                            android:paddingRight="5dp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:layout_marginTop="1dp"
                            android:background="@android:color/transparent"
                            android:maxLength="50"
                            android:textColorHint="#ffffff"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"

                    />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_company_name"
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"
                >
                    <EditText
                            android:id="@+id/edtCompanyName"
                            android:layout_width="240dp"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="Company name"
                            android:maxLength="50"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:paddingRight="10dp"
                            android:drawableLeft="@drawable/icon_company_name"
                            android:drawablePadding="7dp"
                            android:layout_marginBottom="3dp"

                            android:inputType="text"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"

                    />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"

                >
                    <EditText
                            android:id="@+id/edtUserPhoneNo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/icon_mobile_account"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/phone_no_hint_signup_edt"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:paddingRight="5dp"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"

                            android:textCursorDrawable="@drawable/cursor_color"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="235dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_delivery_details_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/colorPrimary"

                >
                    <EditText
                            android:id="@+id/edtEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/icon_email_account"
                            android:drawablePadding="7dp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/email_address_hint_signup_edt"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:textColor="@color/availibility_textview"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:paddingRight="5dp"

                            android:layout_marginBottom="5dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"/>

                </android.support.design.widget.TextInputLayout>


                <EditText
                        android:id="@+id/edtNotes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:textColor="@color/availibility_textview"
                        android:hint="Write your message."
                        android:gravity="top"
                        android:imeOptions="actionDone"
                        android:background="@drawable/rounded_edit_text"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:padding="5dp"
                        android:textSize="@dimen/txt_report_list_item_size"
                        android:maxLength="500"
                />


                <Button
                        android:id="@+id/btnSend"
                        android:layout_width="@dimen/button_login_width"
                        android:layout_height="@dimen/button_login_height"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="Send"
                        android:theme="@style/PrimaryButton"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/btn_login_size"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>
