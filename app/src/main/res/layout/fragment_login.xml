<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relativeLayoutParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light_missing_fields_bg"
                android:clickable="true"


>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"

    >

        <LinearLayout
                android:id="@+id/linearLayoutParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
        >

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_horizontal"-->
            <!--&gt;-->
            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="@drawable/company_logo"-->

            <!--/>-->
            <!--</LinearLayout>-->


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
            >
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_username"
                        android:layout_width="260dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_stroke_sign_in_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="#ffffff"


                >
                    <EditText
                            android:id="@+id/edtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:drawableLeft="@drawable/icon_user_account"
                            android:drawablePadding="7dp"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/employee_code_hint_login_edt"
                            android:textColor="#ffffff"
                            android:inputType="text"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:layout_marginTop="1dp"
                            android:background="@android:color/transparent"
                            android:maxLength="20"
                            android:textColorHint="#ffffff"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"

                    />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="260dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_stroke_sign_in_edt"
                        android:paddingRight="10dp"
                        android:textColorHint="#ffffff"
                >
                    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/customEdtPasswordHideShow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:drawableLeft="@drawable/icon_password"
                            android:drawablePadding="7dp"
                            android:maxLines="1"
                            android:fontFamily="@font/titilliu_web_regular"
                            android:hint="@string/password_hint_login_edt"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="4dp"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"

                            android:maxLength="15"
                            android:textColorHint="#ffffff"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"/>
                </android.support.design.widget.TextInputLayout>
                <!--<EditText-->
                <!--android:id="@+id/edtPassword"-->
                <!--android:layout_width="260dp"-->
                <!--android:layout_height="@dimen/edit_height"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/bg_stroke_sign_in_edt"-->
                <!--android:drawableLeft="@drawable/icon_password"-->
                <!--android:drawablePadding="7dp"-->
                <!--android:fontFamily="@font/titilliu_web_regular"-->
                <!--android:hint="@string/password_hint_login_edt"-->
                <!--android:inputType="textPassword"-->
                <!--android:imeOptions="actionDone"-->
                <!--android:maxLength="15"-->
                <!--android:textColorHint="@color/red_edt_hint"-->
                <!--android:textCursorDrawable="@drawable/cursor_color"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--/>-->
                <Button
                        android:id="@+id/btnSignIn"
                        android:layout_width="@dimen/btn_login_width"
                        android:layout_height="@dimen/btn_login_height"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/login_btn"
                        android:theme="@style/PrimaryButton"
                        android:textAllCaps="false"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/btn_login_size"/>

                <TextView
                        android:id="@+id/textviewForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_edt_account"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:text="@string/forgot_password_label"/>

                <com.facebook.login.widget.LoginButton
                        android:id="@+id/fb_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                <!--<Button-->
                <!--android:id="@+id/btnCreateAccount"-->
                <!--android:layout_width="@dimen/btn_login_width"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:text="@string/signup_btn"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@color/white"-->
                <!--android:theme="@style/PrimaryButton"-->
                <!--android:textSize="@dimen/btn_login_txt_size"/>-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="3dp"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red_edt_account"
                  android:layout_gravity="center_horizontal"
                  android:text="@string/signup_label"/>
        <!--android:background="@drawable/btn_rounded_corners_login"-->

        <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="@dimen/btn_login_width"
                android:layout_height="@dimen/btn_login_height"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/signup_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="1dp"
                android:theme="@style/PrimaryButton"
                android:textSize="@dimen/btn_login_size"/>

    </LinearLayout>
</RelativeLayout>
