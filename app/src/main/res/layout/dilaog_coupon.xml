<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/titilliu_web_semi_bold"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/txt_dp_user_pop_up_heading_size"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="30dp"
        >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="1.0"
            >

                <EditText
                        android:id="@+id/txtMessage"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="0.8"
                        android:text=""
                        android:maxLines="1"
                        android:textColor="@color/availibility_textview"
                        android:background="@drawable/rounded_edit_text"
                        android:paddingLeft="5dp"
                        android:maxLength="40"
                        android:textColorHint="#E10915"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp"
                        android:fontFamily="@font/titilliu_web_regular"

                />

                <Button
                        android:id="@+id/btnApplyCoupon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="0.2"
                        android:text="@string/apply_coupon"
                        android:theme="@style/ScreenButton"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="11sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>







