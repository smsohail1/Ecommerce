<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/irongrip_repeating"

                android:clickable="true">
    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="120dp"
                          android:gravity="center_horizontal"
                          android:background="@color/colorPrimary"
                          android:orientation="horizontal">

                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/imgProfile"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="120dp"-->
                <!--android:src="@drawable/company_logo"-->
                <!--app:civ_border_width="2dp"-->
                <!--android:padding="8dp"-->
                <!--android:background="@drawable/company_logo"-->
                <!--android:layout_centerInParent="true"-->

                <!--app:civ_border_color="#ffffff"-->
                <!--/>-->
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/company_logo"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                />
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"
                          android:padding="10dp"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="WHO ARE WE?"
                          android:textSize="@dimen/textview_about_us_height"
                          android:textColor="@color/colorPrimary"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/who_are_we"
                          android:layout_marginTop="5dp"
                          android:textSize="@dimen/textview_about_description_height"
                          android:textColor="@color/light_grey_delivey_screen_color"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="OUR EXPERIENCE"
                          android:layout_marginTop="5dp"
                          android:textSize="@dimen/textview_about_us_height"
                          android:textColor="@color/colorPrimary"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/our_experience"
                          android:layout_marginTop="5dp"
                          android:textSize="@dimen/textview_about_description_height"
                          android:textColor="@color/light_grey_delivey_screen_color"
                />

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_location_about"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/company_address"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_phone_about"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/phone_no"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_about_email"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/company_email_id"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>