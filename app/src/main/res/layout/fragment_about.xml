<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>
    <RelativeLayout
            android:id="@+id/relativeLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/irongrip_repeating"
            android:clickable="true"


    >

        <android.support.v7.widget.CardView
                android:id="@+id/cardViewParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_centerInParent="true"

        >


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="WHO ARE WE?"
                          android:textSize="@dimen/textview_about_us_height"
                          android:textColor="@color/colorPrimary"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/who_are_we"
                          android:layout_marginTop="5dp"
                          android:lineSpacingExtra="3dp"
                          android:textSize="@dimen/textview_about_description_height"
                          android:textColor="@color/light_grey_delivey_screen_color"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="OUR EXPERIENCE"
                          android:layout_marginTop="5dp"
                          android:textSize="@dimen/textview_about_us_height"
                          android:textColor="@color/colorPrimary"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/our_experience"
                          android:layout_marginTop="5dp"
                          android:lineSpacingExtra="3dp"
                          android:textSize="@dimen/textview_about_description_height"
                          android:textColor="@color/light_grey_delivey_screen_color"
                />


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_location_about"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/company_address"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_phone_about"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/phone_no"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/icon_about_email"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/company_email_id"
                              android:layout_marginLeft="8dp"
                              android:textSize="@dimen/textview_about_description_height"
                              android:textColor="@color/light_grey_delivey_screen_color"
                    />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
