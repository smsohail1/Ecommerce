<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/irongrip_repeating"
                android:clickable="true">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"

    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >

                <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@drawable/icon_decrement"
                />

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <android.support.v7.widget.CardView
                        android:id="@+id/cardViewParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp">


                    <LinearLayout
                            android:id="@+id/linearParent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1.0"


                        >
                            <LinearLayout android:layout_width="0dp"
                                          android:layout_height="match_parent"
                                          android:orientation="horizontal"
                                          android:layout_weight="0.5"
                            >

                                <TextView
                                        android:id="@+id/priceLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/price_textview"
                                        android:textStyle="bold"
                                        android:text="Rs"
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/txt_product_name_card_selected_size"/>

                                <TextView
                                        android:id="@+id/priceTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/price_textview"
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal"
                                        android:textSize="@dimen/txt_product_name_card_selected_size"/>

                            </LinearLayout>

                            <LinearLayout android:layout_width="0dp"
                                          android:layout_height="match_parent"
                                          android:orientation="horizontal"
                                          android:layout_weight="0.5"
                                          android:layout_marginRight="5dp"
                                          android:gravity="right"
                            >

                                <LinearLayout android:layout_width="wrap_content"
                                              android:layout_height="match_parent"
                                              android:orientation="horizontal"
                                >

                                    <ImageView
                                            android:id="@+id/decrementImageButton"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.3"
                                            android:src="@drawable/icon_decrement"
                                            android:padding="1dp"

                                    />

                                    <TextView
                                            android:id="@+id/counterTextview"
                                            android:layout_width="0dp"
                                            android:gravity="center_horizontal"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.4"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                    />

                                    <ImageView
                                            android:id="@+id/incrementImageButton"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/icon_increment"
                                            android:padding="1dp"
                                            android:layout_weight="0.3"


                                    />


                                    <!--<com.hariofspades.incdeclibrary.IncDecCircular-->
                                    <!--android:layout_width="100dp"-->
                                    <!--android:layout_height="w"-->
                                    <!--app:textSize="24"-->
                                    <!--android:gravity="center_vertical"-->
                                    <!--android:id="@+id/incDecCounterHorizontal"-->
                                    <!--app:textColor="@color/black"-->
                                    <!--app:leftButtonColorTint="@color/colorPrimaryDark"-->
                                    <!--app:rightButtonColorTinit="@color/colorPrimary"-->
                                    <!--app:leftDrawableTint="@color/white"-->
                                    <!--app:rightDrawableTint="@color/white"-->

                                    <!--app:leftDrawable="@drawable/ic_remove_black_24dp"-->
                                    <!--app:rightDrawable="@drawable/ic_add_black_24dp"-->
                                    <!--/>-->


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"

                        >
                            <TextView
                                    android:id="@+id/discountPriceLabelTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/discount_price_textview"
                                    android:textStyle="bold"
                                    android:text="Rs"
                                    android:background="@drawable/strike_through"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/txt_report_list_item_size"/>

                            <TextView
                                    android:id="@+id/discountPriceTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/discount_price_textview"
                                    android:text="120"
                                    android:background="@drawable/strike_through"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/txt_report_list_item_size"/>
                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                        >

                            <TextView
                                    android:id="@+id/productNameLabelTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/row_product_name_textview"
                                    android:textSize="@dimen/txt_product_name_card_selected_size"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                        android:id="@+id/linearAvailibilityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                    <android.support.v7.widget.CardView
                            android:id="@+id/cardViewAvailibilityParent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="2dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="10dp"
                                          android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/availabilityLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/discount_price_textview"
                                        android:text="Availability:"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                                <TextView
                                        android:id="@+id/availabilitValueTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/availibility_textview"
                                        android:text="2 in stock"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/linearDescriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                    <android.support.v7.widget.CardView
                            android:id="@+id/cardViewDescriptionParent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="2dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="10dp"
                                          android:orientation="horizontal">
                                <TextView
                                        android:id="@+id/descriptionLabelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/discount_price_textview"
                                        android:text="Description:"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                                <TextView
                                        android:id="@+id/descriptionValueTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/availibility_textview"
                                        android:text="@string/product_desc"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="@dimen/txt_report_list_item_size"/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>