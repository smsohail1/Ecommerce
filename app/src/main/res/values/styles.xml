    <style name="PrimaryButton" parent="Theme.AppCompat">
        <!--<item name="colorButtonNormal">@color/colorPrimary</item>-->
        <!--<item name="colorControlHighlight">#4a4a4c</item>-->

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">#f1f1f1</item>
    </style>


    <style name="ScreenButton" parent="Theme.AppCompat">
        <!--<item name="colorButtonNormal">@color/colorPrimary</item>-->
        <!--<item name="colorControlHighlight">#4a4a4c</item>-->

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">#f1f1f1</item>
    </style>


    <style name="changePhotoButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="NavigationDrawerStyle" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>-->
    </style>


    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
    </style>


    <style name="CardLabel">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/card_label_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:padding">@dimen/items_inbetween_medium</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textColor">@color/CTA_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="CardInput">
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:layout_marginRight">@dimen/items_inbetween</item>
        <item name="android:layout_marginTop">@dimen/items_inbetween</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/items_inbetween_medium</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
